@model LoginViewModel

@{
    Layout = null;
}
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>PetShop Admin</title>
    <link rel="stylesheet" href="/css/admincss/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="/css/admincss/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="/css/admincss/assets/css/style.css">
    <link rel="shortcut icon" href="/css/admincss/assets/images/LogoK.png" />
</head>
<body>
    <div class="container-scroller">
        <div class="container-fluid page-body-wrapper full-page-wrapper">
            <div class="row w-100 m-0">
                <div class="content-wrapper full-page-wrapper d-flex align-items-center auth login-bg ">
                    <div class="card col-lg-4 mx-auto">
                        <div class="card-body px-5 py-5">
                            <h3 class="card-title text-left mb-3">Admin</h3>
                            <form method="post" asp-controller="Home" asp-action="Login">
                                <input type="hidden" name="ReturnUrl" value="@ViewBag.ReturnUrl" />
                                <div class="form-group">
                                    <label>Mail Adresi</label>
                                    <input type="email" class="form-control p_input" placeholder="Mail Adresi" name="mailaddress" />
                                    <span asp-validation-for="EMail"></span> <!-- Hata olduğunda bu görünür olur -->

                                </div>
                                <div class="form-group">
                                    <label>Şifre</label>
                                    <input type="password" class="form-control p_input" placeholder="Şifre" name="password" />
                                    <span asp-validation-for="Password"></span> <!-- Hata olduğunda bu görünür olur -->

                                </div>
                                <div class="form-group d-flex align-items-center justify-content-between">
                                    <div class="form-check">
                                        <label class="form-check-label">
                                            <input type="checkbox" class="form-check-input">Beni Hatırla
                                        </label>
                                    </div>
                                </div>
                                <div class="text-center">
                                    <button type="submit" class="btn btn-primary btn-block enter-btn">Giriş</button>
                                    <span style="display:block;color:red">@ViewBag.mesaj</span>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="/css/admincss/assets/vendors/js/vendor.bundle.base.js"></script>
    <script src="/css/admincss/assets/js/off-canvas.js"></script>
    <script src="/css/admincss/assets/js/hoverable-collapse.js"></script>
    <script src="/css/admincss/assets/js/misc.js"></script>
    <script src="/css/admincss/assets/js/settings.js"></script>
    <script src="/css/admincss/assets/js/todolist.js"></script>
</body>
</html>
@section scripts {
    <partial name="_ValidationScriptsPartial" />
}


@model Animal
<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Yeni Hayvan Ekle </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#"> Ekleme </a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Hayvan Yönetimi </li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"><a asp-action="Cancel" class="btn btn-round btn-danger float-right" style="color:#fff">İptal</a></h4>
                        <p class="card-description">
                        </p>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Name">
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input asp-for="@Model.Name" class="form-control "><span style="color:red" asp-validation-for="@Model.Name"></span>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Description">
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input asp-for="@Model.Description" class="form-control "><span style="color:red" asp-validation-for="@Model.Description"></span>
                            </div>
                        </div>
                        <div class="item form-group">
                            <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Information">
                            </label>
                            <div class="col-md-6 col-sm-6 ">
                                <input asp-for="@Model.Information" class="form-control "><span style="color:red" asp-validation-for="@Model.Information"></span>
                            </div>
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.Number">
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <input asp-for="@Model.Number" class="form-control "><span style="color:red" asp-validation-for="@Model.Number"></span>
                                </div>
                            </div>
                        </div>
                        <br />
                        <form enctype="multipart/form-data" asp-action="Create" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                            <div class="item form-group">
                                <div class="col-md-6 col-sm-6 offset-md-3">
                                    <button class="btn btn-primary" type="reset">Temizle</button>
                                    <button type="submit" class="btn btn-success">Ekle</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Bu site MuhammetErtem® Tarafından Gelişmiş E-Ticaret sistemleri ile hazırlanmıştır.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"><a href="https://www.muhammetertem.com.tr/" target="_blank"></a></span>
        </div>
    </footer>
    <!-- Footer -->
</div>

<!-- /page content -->
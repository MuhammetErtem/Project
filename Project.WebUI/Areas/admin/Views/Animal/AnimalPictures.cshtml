@model AnimalVM
<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Son Ürün Fotoğraf Ekle </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#"> Fotoğraf Ekleme </a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Ürün Fotoğraf Yönetimi </li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">"
                    <div class="card-body">
                        <form enctype="multipart/form-data" asp-action="AnimalPictures" id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">
                            <h4 class="card-title"><a asp-action="Cancel" class="btn btn-round btn-danger float-right" style="color:#fff">İptal</a></h4>
                            <p class="card-description">
                            </p>
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                            <div class="item form-group">
                                <label class="col-form-label col-md-3 col-sm-3 label-align" for="first-name" asp-for="@Model.AnimalPicture.AnimalID">
                                </label>
                                <div class="col-md-6 col-sm-6 ">
                                    <select asp-for="@Model.AnimalPicture.AnimalID" class="form-control" asp-items="@Model.Animals.Select(s=>new SelectListItem{Value=s.ID.ToString(),Text=@s.Name})"></select>
                                </div>
                            </div>
                            <div class="item form-group">
                                @Html.LabelFor(model => model.AnimalPicture.Picture, htmlAttributes: new { @class = "col-form-label col-md-3 col-sm-3 label-align" })
                                <div class="col-md-6 col-sm-6 ">
                                    @Html.EditorFor(model => model.AnimalPicture.Picture, new { htmlAttributes = new { @class = "form-control", type = "file", multiple = "true" } })
                                    @Html.ValidationMessageFor(model => model.AnimalPicture.Picture, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <br />
                            <div class="item form-group">
                                <div class="col-md-6 col-sm-6 offset-md-3">
                                    <button class="btn btn-primary" type="reset">Temizle</button>
                                    <button type="submit" class="btn btn-success">Ekle</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Bu site MuhammetErtem® Tarafından Gelişmiş E-Ticaret sistemleri ile hazırlanmıştır.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"><a href="https://www.muhammetertem.com.tr/" target="_blank"></a></span>
        </div>
    </footer>
    <!-- Footer -->
</div>

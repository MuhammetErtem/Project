@model IEnumerable<SubCategory>
@{
    int i = 0;
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="page-header">
            <h3 class="page-title"> Alt Kategori Yönetimi </h3>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="#"> Liste </a></li>
                    <li class="breadcrumb-item active" aria-current="page"> Alt Kategori Yönetimi </li>
                </ol>
            </nav>
        </div>
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title"><a asp-action="Create" class="btn btn-round btn-primary float-right" style="color:#fff">Yeni Alt Kategori</a></h4>
                        <p class="card-description">
                        </p>
                        <div class="table-responsive">
                            <table class="table table-striped">
                                <thead>
                                    <tr>
                                        <th> Alt Kategori Adı</th>
                                        <th> Kategorisi </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (SubCategory s in Model)
                                    {
                                        <tr class="@(i%2==0?"even":"odd") pointer">
                                            <td class="py-1" style="vertical-align:middle"><a>@s.Name</a></td>
                                            <td class="py-1" style="vertical-align:middle"><a>@s.Category.Name</a></td>

                                            <th><a asp-action="Update" asp-route-id="@s.ID" class="btn btn-round btn-success float-right">Düzenle</a></th>
                                            <th><button onclick="deleteRecord('@s.Name','subcategory',@s.ID)" class="btn btn-round btn-danger float-right">Sil</button></th>
                                        </tr>
                                        i++;
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Footer -->
    <footer class="footer">
        <div class="d-sm-flex justify-content-center justify-content-sm-between">
            <span class="text-muted d-block text-center text-sm-left d-sm-inline-block">Bu site MuhammetErtem® Tarafından Gelişmiş E-Ticaret sistemleri ile hazırlanmıştır.</span>
            <span class="float-none float-sm-right d-block mt-1 mt-sm-0 text-center"><a href="https://www.muhammetertem.com.tr/" target="_blank"></a></span>
        </div>
    </footer>
    <!-- Footer -->
</div>


<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row" style="margin-top: 50px;">
            <div class="col-lg-12">
                <ul class="filter__controls">
                    <li class="active" data-filter="*">Yeni Ürünler</li>
                </ul>
            </div>
        </div>
        <div class="row product__filter">
            @foreach (Product p in Model.LatestProducts)
            {
                <partial name="_ProductBoxPartial" model="@p"></partial>
            }
        </div>
    </div>
</section>
<!-- Product Section End -->
<!-- Categories Section Begin -->
<section class="categories spad">
    <div class="container">
        @foreach (Product p in Model.BestSellerProducts)
        {
            if (p.Stock < 10)
            {
                <div class="row">
                    <div class="col-lg-3">
                        <div class="categories__text">
                            <h2>Tükenmeden <br /> <span>Alın</span> <br /> @*Accessories*@</h2>
                        </div>
                    </div>
                    <div class="col-lg-4">
                        <div class="categories__hot__deal">
                            <img src="@p.ProductPictures.FirstOrDefault().Path" alt="">
                            <div class="hot__deal__sticker" style="background-color: #36a300">
                                <span>İndirim</span>
                                <h5>@p.Price ₺</h5>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 offset-lg-1">
                        <div class="categories__deal__countdown">
                            <span>Çok Satan Ürünler</span>
                            <h2>@p.Name</h2>
                            @if (p.Stock > 0)
                            {
                                <a asp-controller="Product" asp-action="Detail" asp-route-name="@GeneralTool.ConvertURL(p.Name)" asp-route-id="@p.ID" class="primary-btn" style="background-color: #883fab">Satın Al</a>
                            }
                            else
                            {
                                <a class="primary-btn">Tükendi</a>
                            }
                        </div>
                    </div>
                </div>
            }

        }
    </div>
</section>
<!-- Categories Section End -->
<!-- Instagram Section Begin -->
<section class="instagram spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="instagram__pic">
                    @foreach (AnimalPicture a in Model.AnimalPictures)
                    {
                        <div class="instagram__pic__item set-bg" data-setbg="@a.Picture"></div>
                    }
                </div>
            </div>
            <div class="col-lg-4">
                <div class="instagram__text">
                    <h2 style="color: #883fab ">Sahiplen</h2>
                    <p>
                        Ücretsiz sahiplenebileceğiniz evcil hayvanlarımızı gördünüz mü?
                    </p>
                    <h3><a asp-controller="Animal" asp-action="Index" class="primary-btn">Satın Alma Sahiplen</a></h3>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Instagram Section End -->
<!-- Latest Blog Section Begin -->
<section class="latest spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title">
                    <span>Blog</span>
                    <h2>Güncel Bloglar</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @foreach (Blog b in Model.Blogs)
            {
                <partial name="_BlogBoxPartial" model="@b"></partial>
            }
        </div>
    </div>
</section>
<!-- Latest Blog Section End -->

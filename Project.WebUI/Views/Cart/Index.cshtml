    @model IEnumerable<Cart>
    
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-option">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="breadcrumb__text">
                        <h4>Sepet</h4>
                        <div class="breadcrumb__links">
                            <a href="/">Ana Sayfa</a>
                            <span>Sepet</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->
    <!-- Shopping Cart Section Begin -->
    <section class="shopping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                    <div class="shopping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th>Ürün</th>
                                    <th>Miktar</th>
                                    <th>Fiyat</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (Cart c in Model)
                                {
                                    <tr>
                                        <td class="product__cart__item">
                                            <div class="product__cart__item__pic">
                                                <img src="@c.Picture" style="max-height:110px; max-width:90px;" alt="">
                                            </div>
                                            <div class="product__cart__item__text">
                                                <h6>@c.Name</h6>
                                                <h5>@c.Price.ToString("#0.00") ₺</h5>
                                            </div>
                                        </td>
                                        <td class="quantity__item">
                                            <div class="quantity">
                                                <div class="pro-qty-2">
                                                    <input type="text" value="@c.Quantity">
                                                </div>
                                            </div>
                                        </td>
                                        <td class="cart__price">@Convert.ToDecimal(c.Price * c.Quantity).ToString("#0.00") ₺</td>
                                        <td class="cart__close"><i class="fa fa-close"></i></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn">
                                <a href="/">Alışverişe Devam Et</a>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="continue__btn update__btn">
                                @*<a href="#"><i class="fa fa-spinner">Kart Ekle</i></a>*@
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="cart__discount">
                        <h6>İndirim Kodu</h6>
                        <form action="#">
                            <input type="text" placeholder="Kupon Kodu">
                            <button type="submit">Uygula</button>
                        </form>
                    </div>
                    <div class="cart__total">
                        <h6>Sepet Toplam</h6>
                        <ul>
                            <li>Ara Toplam <span>@Model.Sum(s => s.Price * s.Quantity).ToString("#0.00") ₺</span></li>
                            <li>Kargo<span style=" color: #883fab ">Ücretsiz Kargo</span></li>
                            <li>Toplam <span>@Model.Sum(s => s.Price * s.Quantity).ToString("#0.00") ₺</span></li>
                        </ul>
                        <a href="#" class="primary-btn">Ödeme Yöntemi</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shopping Cart Section End -->
    <!-- Search Begin -->
    <div class="search-model">
        <div class="h-100 d-flex align-items-center justify-content-center">
            <div class="search-close-switch">+</div>
            <form class="search-model-form">
                <input type="text" id="search-input" placeholder="Search here.....">
            </form>
        </div>
    </div>

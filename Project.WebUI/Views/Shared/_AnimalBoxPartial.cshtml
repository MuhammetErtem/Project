@model Animal

<div class="col-lg-3 col-md-6 col-sm-6 col-md-6 col-sm-6 mix new-arrivals">
    <div class="product__item">
        <div class="product__item__pic set-bg" data-setbg="@Model.AnimalPictures.FirstOrDefault().Path">
            <ul class="product__hover">
            </ul>
        </div>
        <div class="product__item__text">
            <h6>@Model.Name</h6>
            <a asp-controller="Animal" asp-action="Detail" asp-route-name="@GeneralTool.ConvertURL(Model.Name)" asp-route-id="@Model.ID">Sahiplen</a>
        </div>
    </div>
</div>
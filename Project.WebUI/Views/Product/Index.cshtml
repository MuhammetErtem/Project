@model ProductVM
<!-- Breadcrumb Section Begin -->
<section class="breadcrumb-option">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="breadcrumb__text">
                    <h4>İLGİLİ ÜRÜNLER</h4>
                    <div class="breadcrumb__links">
                        <a href="./index.html">Ana Sayfa</a>
                        @*<span>@Model.Category.Name</span>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Breadcrumb Section End -->
<!-- Shop Section Begin -->
<section class="shop spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3">
                <div class="shop__sidebar">
                    <div class="shop__sidebar__search">
                        <form action="#">
                            <input type="text" placeholder="Search...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="shop__sidebar__accordion">
                        <div class="accordion" id="accordionExample">
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseOne">Kategori</a>
                                </div>
                                <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__categories">
                                            <ul class="nice-scroll">
                                                    @foreach (Category c in Model.CategoryList)
                                                    {
                                                        <li><a href="#">@c.Name</a></li>
                                                    }
                                                </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseTwo">Marka</a>
                                </div>
                                <div id="collapseTwo" class="collapse show" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__brand">
                                            <ul>
                                                @foreach (Brand b in Model.BrandList)
                                                {
                                                    <li><a href="#">@b.Name</a></li>
                                                                }
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="card">
                                <div class="card-heading">
                                    <a data-toggle="collapse" data-target="#collapseThree">Fiyat</a>
                                </div>
                                <div id="collapseThree" class="collapse show" data-parent="#accordionExample">
                                    <div class="card-body">
                                        <div class="shop__sidebar__price">
                                            <ul>
                                                <li><a href="#">0₺ - 100₺</a></li>
                                                <li><a href="#">100₺ - 250₺</a></li>
                                                <li><a href="#">250₺ - 500₺</a></li>
                                                <li><a href="#">500₺+</a></li>
                                            </ul>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-9">
                <div class="shop__product__option">
                    <div class="row">
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="shop__product__option__left">
                                <p>@Model.ListProduct.Count().ToString("n0") sonuçtan 1–@Model.ListProduct.Count().ToString("n0") arası gösteriliyor</p>
                            </div>
                        </div>
                        <div class="col-lg-6 col-md-6 col-sm-6">
                            <div class="shop__product__option__right">
                                <p>Sıralama Seçiniz</p>
                                <select>
                                    <option value="">En Düşük Fiyat</option>
                                    <option value="">En Yüksek Fiyat</option>
                                    <option value="">Yeni Gelenler</option>
                                    <option value="">Çok Satanlar</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @foreach (Product p in Model.ListProduct)
                    {
            <partial name="_ProductBoxPartialDetail" model="@p"></partial>}
                </div>
                @Html.PagedListPager((IPagedList)Model.ListProduct, page => Url.Action("Index", new { page }), HomeExtensions.PagedListRenderOptions)
            </div>
        </div>
    </div>
</section>
<!-- Shop Section End -->
